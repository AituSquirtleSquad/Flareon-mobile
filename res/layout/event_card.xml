<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


        <ImageView
            android:id="@+id/image_card"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:src="@drawable/movie1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:scaleType="centerInside"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="30dp"

            />


    <TextView
        android:id="@+id/event_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        app:layout_constraintBottom_toBottomOf="@+id/image_card"
        app:layout_constraintStart_toStartOf="@+id/image_card"
        app:layout_constraintTop_toTopOf="@+id/image_card"
        android:layout_marginTop="-100dp"
        android:layout_marginLeft="130dp"/>

    <TextView
        android:id="@+id/event_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Data"

        app:layout_constraintStart_toStartOf="@+id/event_name"
        app:layout_constraintTop_toTopOf="@+id/event_name"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="0dp" />

    <Button
        android:layout_width="120dp"
        android:layout_height="35dp"
        android:text="Book a ticket"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="@+id/event_data"
        app:layout_constraintTop_toTopOf="@+id/event_data"
        android:layout_marginTop="25dp"
        android:backgroundTint="@color/blueButton"/>

</androidx.constraintlayout.widget.ConstraintLayout>